<div class="container">
  <div class="container-index">
    <fieldset>
    	<legend>Logowanie</legend>
		<%= form_for(resource, :as => resource_name, :class => "form-horizontal", :url => session_path(resource_name)) do |f| %>
		<div class="row">
			<div class="col-xs-12 col-md-5">
				<div class ="form-group">
 				  <%= f.email_field :email, placeholder: "Email", :autofocus => true, :class => "form-control" %>
 				</div>
				<div class ="form-group">
	  				<%= f.password_field :password, placeholder: "Hasło", :class => "form-control" %>
	  			</div>
				<% if devise_mapping.rememberable? -%>
				    <div class="form-group">
				    	<%= f.label "Zapamiętaj", :class => "checkbox" %>
				    	<%= f.check_box :remember_me, :class => "checkbox" %> 
				    </div>
	  			<% end -%>
				<div class="form-group">
					<%= f.submit "Zaloguj", :class => "btn btn-default" %>
				</div>
			</div>
		</div>
		<% end %>
<%= render "devise/shared/links" %>
</fieldset>
</div>
</div>
