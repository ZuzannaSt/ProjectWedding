<div class="container">
	<div class="container-index">
		<fieldset>
			<legend>Sign up</legend>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<div class="row">
				<div class="col-xs-12 col-md-5">
					<div class ="form-group">
						<%= f.email_field :email, placeholder: "Email" :autofocus => true, :class => "form-control" %>
					</div>
					<div class ="form-group">
						<%= f.password_field :password, placeholder: "Hasło", :class => "form-control" %>
					</div>
					<div class ="form-group">
						<%= f.password_field :password_confirmation, placeholder: "Potwierdź hasło", :class => "form-control" %>
					</div>
					<div class="form-group"><%= f.submit "Zarejestruj", :class => "btn btn-default" %>
					</div>
				</div>
			</div>
			<% end %>
			<%= render "devise/shared/links" %>
		</fieldset>
	</div>
</div>
