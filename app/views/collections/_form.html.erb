<div class="container container-index">
  <fieldset>
    <div class="form-horizontal">
      <div class="row">
        <div class="col-xs-12 col-md-5">
          <%= form_for(@collection) do |f| %>
            <% if @collection.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

              <ul>
                <% @collection.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

          <div class="form-group">
            <%= f.text_field :name, placeholder: "Nazwa kolekcji", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :description, placeholder: "Krótki opis", class: "form-control" %>
          </div>

           <div class="form-group">
            <%= f.file_field :cover %>
          </div>


          <div class="form-group">
            <%= f.submit 'Zatwierdź', class: "btn btn-default" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>
</div>