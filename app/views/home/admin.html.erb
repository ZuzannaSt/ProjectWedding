<% if user_signed_in? %>
<div class="container container-index">
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<ul class="list-inline text-center btn-listed">
					<li><%= link_to 'Nowe zaproszenie', new_invitation_path, class: "btn btn-default" %></li>
					<li><%= link_to 'Nowa kolekcja', new_collection_path, class: "btn btn-default" %></li>
					<li><%= link_to 'Nowy kolor', new_color_path, class: "btn btn-default" %></li>
					<li><%= link_to 'Nowy tag', new_tag_path, class: "btn btn-default" %></li>
					<li><%= link_to 'Nowy element', new_element_path, class: "btn btn-default" %></li>
				</ul>
			</div>
			<fieldset>
				<legend>Zaproszenia</legend>
				<table class ="table table-hover table-striped">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @invitations.each do |invitation| %>
						<tr>
							<td><%= link_to invitation.name, invitation, class: "a a-admin" %></td>
							<td class="td-button"><%= link_to edit_invitation_path(invitation), class: "btn btn-default button-xs" do %>
								<span class="glyphicon glyphicon-pencil"></span>
								<% end %>
							</td>
							<td class="td-button"><%= link_to invitation, method: :delete, data: { confirm: 'Na pewno?' }, class: "btn btn-danger button-xs" do %>
								<span class="glyphicon glyphicon-trash"></span>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</fieldset>
			<fieldset>
				<legend>Kolekcje</legend>
				<table class="table table-hover table-striped">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @collections.each do |collection| %>
						<tr>
							<td><%= link_to collection.name, collection, class: "a a-admin" %></td>
							<td class="td-button"><%= link_to edit_collection_path(collection), class: "btn btn-default button-xs" do %>
								<span class="glyphicon glyphicon-pencil"></span>
								<% end %>
							</td>
							<td class="td-button"><%= link_to collection, method: :delete, data: { confirm: 'Na pewno?' }, class: "btn btn-danger button-xs" do %>
								<span class="glyphicon glyphicon-trash"></span>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</fieldset>
		</div>
	</div>
</div>
<% end %>